{
  "name": "node-training",
  "version": "1.0.0",
  "description": "Module 3 for NodeJs Global Mentoring Program",
  "main": "src/server.js",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "celebrate": "^13.0.4",
    "config": "^3.3.3",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "express-winston": "^4.0.5",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.5.1",
    "pg-native": "^3.0.0",
    "sequelize": "^6.3.5",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.10",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.7",
    "babel-eslint": "^10.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "esm": "^3.2.25",
    "husky": "^5.0.9",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "pm2": "^4.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "init-tables": "node -r esm ./sql/init.js",
    "lint": "npx eslint ./src --ext .js",
    "prettier": "npx prettier --write src/**/**.*",
    "clean": "rimraf ./build",
    "build": "npx babel ./src --out-dir ./build",
    "stop:prd": "pm2 stop user-service",
    "start:prd": "cross-env NODE_ENV=production pm2 start ./build/server.js --name user-service",
    "start:dev": "nodemon -r esm ./src/server.js",
    "launch": "run-s lint clean build start:prd",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "husky": {
    "pre-commit": "lint-staged",
    "pre-push": "run-s clean build"
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run prettier",
      "npm run lint"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mazorakopf/node-training.git"
  },
  "keywords": [
    "epam",
    "mentoring",
    "node"
  ],
  "author": "Uladzislau Kleshchanka",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Mazorakopf/node-training/issues"
  },
  "homepage": "https://github.com/Mazorakopf/node-training#readme"
}
